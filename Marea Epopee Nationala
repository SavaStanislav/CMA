def intrebare_loop():	
	print """\n\tZi, ce facem? Intrebi pe cineva 
	sau incerci sa gasesti singur drumul spre carne?"""
	while True:
		drum = raw_input("> ")
		if "intreb" in drum or "cineva" in drum:
			omul_intrebat()
		elif "singur" in drum or "gasesc" in drum:
			singurel()
		else:
			print "\n\tAcuma serios, omu. Zi ce facem mai departe."	

