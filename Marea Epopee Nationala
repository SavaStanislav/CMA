def ulicioara():
	print """\n\tTe afli pe o ulicioara. 
	In stanga ta se afla un rand de magazine inchise,
	in dreapta un bar cu cativa barbati care striga la un perete,
	iar in fata ta sunt multi oameni care striga ceva si rad zgomotos."""
	while True:
		ulc = raw_input("> ")
		if "bar" in ulc or "dreapta" in ulc or "barbati" in ulc or "barul" in ulc:
			barul()
		elif "stanga" in ulc or "magazine" in ulc:
			magazinele(1)
		elif "inainte" in ulc or "fata" in ulc or "oameni" in ulc:
			autobusul()
		else:
			error()


