def dead(motiv):
	print motiv, "Molodet, ai pierdut."

def error():
	print """
	\n\tNu inteleg. Mai incearca odata."""


def DaNu2(x, y, z):
	while True:
		x = raw_input("> ")
		if x == "da" or x == "Da":
			print y
			pizdeala()
		elif x == "nu" or x == "Nu":
			print z
			pizdeala()
		else:
			error()

def calcatul_pe_cap():
	global go
	print """\n\tGopagonul e la pamant si tu incerci sa-l calci pe cap.
	Pentru a face asta, trebuie sa te apropii, sa-i pui piciorul pe cap 
	si sa intonezi imnul Moldovei, strofa cu strofa."""
	unu = False
	doi = False
	trei = False
	while True:
		imn = raw_input("> ")
		if "limba noastra-i o comoara" in imn or "Limba noastra-i o comoara" in imn:
			print "\n\tGopagonul incepe sa tremure si sa strige cuvinte in latina."
			unu = True
		elif ("in adancuri infundata" in imn or "in adincuri infundata" in imn or "In adancuri infundata" in imn or "In adincuri infundata" in imn) and unu:
			print "\n\tUn lichid negru, intunecat, incepe sa-i iasa pe gura, in timp ce el incepe sa se zbata."
			doi = True
		elif ("Un sirag de piatra rara" in imn or "un sirag de piatra rara" in imn or "un sirag, de piatra rara" in imn) and unu and doi:
			print "\n\tSoaptele a o mie de voci se aud in jur, iar lumina dispare pentru cateva secunde de pe Pamant."
			trei = True
		elif ("Pe mosie revarsata" in imn or "pe mosie revarsata" in imn)and unu and doi and trei:
			print """\n\tUn strigat infiorator te intoarce la realitate.
	Gopagonul sare in sus, vadit slabit. Incepe a vorbi romana si scuipa mai rar pe jos.
	Mai are %d vieti.""" %(go-2)
			go -= 2
			pizdonul()
		else:
			error()

def lovitura_gopului(x):
	global lovit
	lovit = True
	magie1 = True
	magie = True
	global v
	g = random.randint(1, 170)
	j = random.randint(1, 10)
	if 78 < g < 150 and j <= 7:
		print "\n\tTe-ai ferit de lovitura gopagonului."
		lovit = False
	elif x == "picior" and 0 <= g < 25 and lovit:
		print "\n\tAi reusit sa blochezi lovitura."
	elif x == "picior" and not 0 < g < 25 and lovit:
		print """\n\tN-ai reusit sa blochezi lovitura si ti-ai luat una in masea. 
	Mai ai %d vieti.""" % (v-1)
		v -= 1
	elif x == "piept" and not 26 <= g < 51 and lovit:
		print """\n\tN-ai reusit sa blochezi lovitura si ti-ai luat una in masea. 
	Mai ai %d vieti.""" % (v-1)
		v -= 1
	elif x == "piept" and 26 <= g < 51 and lovit:
		print "\n\tAi reusit sa blochezi lovitura." 
	elif x == "bostan" and not 52 < g < 77 and lovit:
		print """\n\tN-ai reusit sa blochezi lovitura si ti-ai luat una in masea. 
	Mai ai %d vieti.""" % (v-1)
		v -= 1
	elif x == "bostan" and 52 < g < 77 and lovit:
		print "\n\tAi reusit sa blochezi lovitura."
	elif 78 < g < 150 and j > 7 and lovit:
		print "\n\tGopagonul o incercat o super-lovitura, nu te-o nimerit si o cazut jos."
		print "\n\tIncerci sa-l calci pe cap?"
		cap = raw_input("> ")
		if cap == "da" or cap == "Da":
			calcatul_pe_cap()
		else:
			pass
	elif 150 < g <= 160 and lovit and magie:
		print """\n\tGopagonul foloseste respiratia gopagonului. 
		Te sufoci si cazi jos. Mai ai %d vieti.""" % (v-1)
		v -= 1
		magie = False
	elif 160 < g <= 170 and lovit and magie1:
		print """\n\tGopagonul foloseste 'snapcik'. 
		Capul incepe sa te doara, iar ochii iti sangereaza. Mai ai %d vieti.""" % (v-1)
		v -= 1
		magie1 = False
	else: 
		pass

def lovitura_ta(x):
	global go
	l = random.randint(1, 140)
	d = random.randint(1, 20)
	a = x
	if a == "picior" and 0 <= l <= 40:
		print "\n\tGopagonul ti-o blocat lovitura."
	elif a == "picior" and not 0 < l <= 40:
		print """\n\tAi nimerit gopagonul. El incepe sa urle de durere. 
	Mai are %d vieti.""" % (go-1)
		go -= 1
	elif a == "piept" and 41 <= l <= 80:
		print "\n\tGopagonul ti-o blocat lovitura."
	elif a == "piept" and not 41 <= l <= 80:
		print """\n\tAi nimerit gopagonul. El incepe sa urle de durere. 
	Mai are %d vieti.""" % (go-1)
		go -= 1
	elif a == "bostan" and 81 < l <= 120:
		print "\n\tGopagonul ti-o blocat lovitura."
	elif a == "bostan" and not 81 < l <= 120:
		print """\n\tAi nimerit gopagonul. El incepe sa urle de durere. 
	Mai are %d vieti.""" % (go-1)
		go -= 1
	elif 120 < l < 125:
		print """Ai aruncat cu o bucata de carne in Gopagon,
		nimerindu-l pe fata. Mai are %d vieti.""" % (go-1)
		go -= 1
	elif l > 125:
		print "Gopagonul s-o ferit de lovitura ta."
	else:
		pass
	
def pizdonul():
	global leac
	leac = 1
	global v
	global magie
	global go
	while v >= 1 and go >= 1:
		print """\n\tGopagonul te loveste.
		Incearca sa iti aperi o parte a corpului (pieptul, picioarele sau bostanul.)"""
		b = raw_input("> ")
		if "piept" in b:
			lovitura_gopului("piept")
		elif "picior" in b or "picioare" in b or "picioarele" in b:
			lovitura_gopului("picior")
		elif "bostan" in b:
			lovitura_gopului("bostan")
		else:
			error()
			pizdonul()
		print """\n\tE randul tau sa lovesti. 
	\n\tAlege o parte a corpului in care sa lovesti (picioare, piept sau bostan),
	sau foloseste o magie, daca stii cum s-o faci."""
		global a
		a = raw_input("> ")
		if "piept" in a:
			lovitura_ta("piept")
		elif "picior" in a or "picioare" in a:
			lovitura_ta("picior")
		elif "bostan" in a:
			lovitura_ta("bostan")
		elif len(a) > 10 and magie > 0:
			print """\n\tAi folosit o putere magica.
	Gopagonul s-o speriat si s-o retras cativa pasi inapoi, urland de frica.
	Ai prins momentul si i-ai frecat una peste dinti.
	Gopagonul mai are %d vieti.""" % (go - 1)
			go -= 1
			magie -= 1
		elif len(a) > 10 and magie <= 0:
			print """\n\tNe pare rau, ai ramas fara mana.
			Plus la asta, Gopagonul incepe sa dezvolte imunitate la magie."""
		elif ("lecuire" in a or "leac" in a or "viata" in a) and leac == 1:
			print "\n\tAi fugit la o taraba din preajma si ai baut niste apa. Ai %d vieti." % (v + 2)
			v += 2
			leac = 0
		elif ("lecuire" in a or "leac" in a or "viata" in a) and not leac == 1:
			print """\n\tNe pare rau, apa s-a terminat.
			O sa fii nevoit sa te descurci cu vietile ramase."""
		else:
			error()
		if v == 0 and go >= 0:
			print """\n\tAi pierdut. Gopagonul te-o doborat
	si ti-o luat tot ce aveai pe tine.
	Stai tavalit, plin de lovituri si sange, in mijlocul Pietii Centrale.
	Lumea trece pe langa tine si incearca sa nu te observe.
	Te trezesti la mijlocul noptii, 
	iar o ploaie racoroasa e pe punctul de a incepe.
	\n\tBrusc, iti amintesti ca esti mag si ca ai salvat inainte de batalie.
	Vrei sa mai faci fata odata Gopagonului?!!!
	VREI SA TE RAZBUNI, SI SA-TI INTORCI CHILOTII FURATI?
			"""
			while True:
				inapoi = raw_input("> ")
				if inapoi == "da" or inapoi == "Da":
					print "\n\tSTRIGA! TU DOAR ESTI NERVOS. ARGHHHHHH!"
				elif "DA" in inapoi or "!" in inapoi or "Da!" in inapoi or "DA!" in inapoi:
					iesire()
				elif "nu" in inapoi or "Nu" in inapoi:
					dead("\n\tStai dar si ingheata in ploaia racoroasa de toamna.")
				else:
					error()
		elif go == 0 and v > 0:
			print """\n\tFelicitari, ai reusit sa dobori Gopagonul si sa salvezi omenirea.
	Pentru actul eroic pe care l-ai facut,
	omenirea iti va fi recunoscatoare pentru vecie."""
	raw_input("> ")
	print """\n\tIti va ridica statui, va numi strazi in numele tau
	si va scrie numeroase carti de istorie despre tine."""
	raw_input("> ")
	print """\n\tO multime de biografii vor fi scrise despre tine
	si numeroase citate de pe internet vor purta semnatura ta."""
	raw_input("> ")
	print """\n\tNumele tau va fi invocat inainte de batalii
	si vei deveni simbolul curajului si a vitejiei."""
	raw_input("> ")
	print """\n\tAici se termina primul episod din jocul 'Marea Epopee Nationala'."""
	raw_input("> ")
	print """\n\tDaca ti-a placut jocul,
	urmareste-ne pe pagina noastra de facebook (facebook.com/MareaEpopeeNationala),
	unde asteptam comentariile si sugestiile tale, reclamatii si plangeri.
	Plus, vom incerca sa va tinem la curent cu urmatoarele episoade ale acestui joc."""
	print """\n\tApasa Enter pentru a te intoarce la viata reala,
	unde putini oameni stiu ca existi."""
	raw_input("> ")
	exit(0)

def pizdeala():
	print """\n\tGopagonul arunca rasarita jos,
	isi desface mainile si scoate strigatul specific aceste specii.
	\n\tP*zdeala finala e pe cale sa inceapa."""
	raw_input("> ")
	"""\n\tPentru a te lupta cu infioratorul gopagon,
	trebuie sa-l lovesti intr-o anumita regiune a corpului
	(picioare, piept sau bostan) si sa blochezi loviturile lui.
	\n\tLa randul lui, gopagonul va incerca sa te loveasca sau va folosi o putere speciala. 
	Tu tot poti lovi cu magie, dar trebuie sa stii cum.
	Esti gata?"""
	while True:
		gata = raw_input("> ")
		if "Da" in gata or "da" in gata:
			print "\n\tGopagonul loveste primul si incearca sa te surprinda."
			pizdonul()
			break
		elif "Nu" in gata or "nu" in gata:
			print "\n\tNiu, niu, mama, mama! Si-i mujik, bl*adi!"
			pizdonul()
		else:
			error()


